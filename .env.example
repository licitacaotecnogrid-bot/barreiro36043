# ============================================
# BANCO DE DADOS - DATABASE
# ============================================

# Para desenvolvimento local com SQLite:
DATABASE_URL="file:./prisma/dev.db"

# Para produção com PostgreSQL/Neon:
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Para produção com Supabase:
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[REGION].supabase.co:5432/postgres"

# ============================================
# API CONFIGURATION
# ============================================

# URL da API (usada no build de produção)
VITE_API_URL="/.netlify/functions/api"

# ============================================
# AMBIENTE
# ============================================

NODE_ENV="development"
PING_MESSAGE="pong"

